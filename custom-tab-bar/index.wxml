<cover-view class="tab-bar tab-bar-dark">
    <cover-view bindtap="switchTab" class="tab-bar-item" data-index="{{index}}" data-path="{{item.path}}"
        wx:for="{{list}}" wx:key="index">
        <cover-view class="tab-bar-text" style="color: {{selected==index?selectedColor:color}}">{{item.text}}
        </cover-view>
    </cover-view>
</cover-view>