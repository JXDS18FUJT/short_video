.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 96rpx;
    background: rgba(0,0,0,0.95)!important;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
    z-index: 99;
}
.tab-bar-text{
    color: red;
}
.tab-bar-text_select{
    color: #ffffff;
}
.tab-bar-item {
    flex: 1;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.tab-bar-dark {
    background: rgba(0,0,0,0.95)!important;
}