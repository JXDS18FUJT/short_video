/* pages/user/videoManage/videoManage.wxss */
page {
  background-color: #181B2E;
  width: 100%;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  height: calc(100% - 96rpx);



}

#videoManage {
  width: 100%;
  height: 100vh;
 
  box-sizing: border-box;

}
#videoManage .black{
  color: #333333;
}
.bottom-nav-height{
  padding-bottom: env(safe-area-inset-bottom);
  height: 96rpx;
  width: 100%;
}
.list {

  padding: 0 32rpx;
  min-height: 80vh;
  display: flex;
  align-content: flex-start;
  align-self: flex-start;
  flex-flow: row wrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 96rpx;
}

.list-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.list-item image {
  width: 336rpx;
  height: 488rpx;
}
.list-item video {
  width: 336rpx;
  height: 488rpx;
}

.list-item-content {
  width: 336rpx;
  height: 158rpx;
  position: absolute;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.75);
  box-sizing: border-box;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  overflow: hidden;

}

.list-item-title {
  width: 336rpx;
  height: 94rpx;
  box-sizing: border-box;
  padding: 8rpx 8rpx;
  color: #fff;
  font-size: 20rpx;
  overflow: hidden; 


}
.list-item-button{
  width: 100%;
  height: 56rpx;



}
.list-item-button>view{
  width: 50%;
  text-align: center;
  color: #fff ;
  font-size: 24rpx;
  line-height: 56rpx;
}
.addvideo-button{
  margin: 0 auto;
  width: 686rpx;
  margin-left: 32rpx;
  margin-bottom: 36rpx;
}