<cover-view class="tab-bar {{selected==0?'':'tab-bar-dark'}}">
    <cover-view bindtap="switchTab" class="tab-bar-item" data-index="{{index}}" data-path="{{item.pagePath}}" wx:for="{{list}}" wx:key="index">
        <cover-view class="tab-bar-text" style="color: {{selected===index?selectedColor:color}}">{{item.text}}</cover-view>
    </cover-view>
</cover-view>
